{
  "manifest_version": 2,

  "name": "SeamlessHealthChecker",
  "description": "See health grades and violations alongside your favorite restaurants on seamless",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://www.seamless.com/food-delivery/vendors*"],
      "js": ["jquery.js", "insert_grades.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs", "https://seamless.com/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
